{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "target": "es6",
        "module": "ES2020",
        "moduleDetection": "force",
        "moduleResolution": "Node",
        "outDir": "./built",
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules", ".vscode"
    ]
}